<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="theme-color" content="#0e606b" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Messenger</title>
    <link rel="stylesheet" href="/font-icon/fontawesome-free-5.15.4-web/css/all.min.css"/>
    <link rel="stylesheet" href="/css/user-logged-css/messenger.css">
    <link rel="stylesheet" href="/css/user-logged-css/messenger-responsive.css">
</head>

<body>
    <section class="sections">
        <div class="container">
            <div class="messenger-container">
                <div class="chat-list-left-sidebar sidebar w0">
                    <div class="self-profile">
                        <div class="wrap">
                            <div class="img-wrap">
                                <img src="/images/users/profile-photo/<%=userData.othersData.profilePic%>" alt="">
                            </div>
                            <p class="self-name"><%= `${userData.firstName} ${userData.lastName}`%></p>
                            <button id="logout"><i class="fas fa-sign-out-alt"></i>Logout</button>
                        </div>
                    </div>
                    <div class="search-users">
                        <input id="search" type="text" placeholder="Search with Name, email or username">
                        <i class="fas fa-search"></i>
                        <div class="search-results">

                        </div>
                    </div>
                    <div class="chat-list">
                    </div>
                    <div class="profile-setting-page-link">
                        <div class="inner">
                            <a href="/<%=userData.username%>" class="profile-lnk"><i class="fas fa-users-cog"></i> Profile</a>
                            <a href="/user/settings" class="settings-lnk"> <i class="fas fa-cog"></i> Settings</a>
                        </div>
                    </div>
                </div>
                <div class="messages-right-sidebar sidebar w0">
                    <div class="chatbox-header">
                        <div class="left-arrow">
                            <i class="fas fa-arrow-left"></i>
                        </div>
                        <div class="img-wrap">
                            <img class="pic" src="" alt="">
                            <i class="fas fa-circle"></i>
                            <span class="hide"></span>
                        </div>
                        <div class="meta">
                            <p class="name">Demo Name</p>
                            <p class="act">Demo Typing</p>
                        </div>
                        <div class="msg-pagination-loading"></div>
                    </div>
                    <div class="chat-box">
                        
                        <!-- incoming-message -->
                        
                        <!-- outgoing-message -->
                       
                    </div>
                    <div class="msg-form-wrap">
                        <form action="" class="msg-input-form" method="post" enctype="multipart/form-data">
                            <div class="input-msg-cont">
                                <textarea id="input-msg" placeholder="Write your message..."></textarea>
                            </div>
                            <div class="input-file-cont">
                                <i class="fas fa-paperclip"></i>
                                <input type="file" id="file-input" name="photo" multiple>
                                <div class="floating-alert-notification"></div>
                            </div>
                            <button id="msg-sent-btn"><i class="fas fa-paper-plane"></i></button>
                        </form>
                        <div class="unavailable-to-sent-msg">
                            <div class="wrap">
                                <p>You unable to chat with this person!</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div id="img-expand"></div>
    </section>
    <script>
        const mySelfId = "<%=userData._id%>";
        const lastChattingUserId = "<%=lastChattingUserId%>";
        let recipientId = "";
    </script>
    <script src="/scripts/module-resources/socket.io.min.js"></script>
    <script src="/scripts/user-logged-scripts/messenger.js"></script>
</body>
</html>